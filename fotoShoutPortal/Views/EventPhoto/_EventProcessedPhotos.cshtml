@model IEnumerable<FotoShoutData.Models.PhotoGroupTDO>

@Html.Partial("_SidePanel", Model)
<section id="main-panel">
@if (Model == null || Model.Count() == 0) {
    if (ViewBag.Error != null) {
        <div class="error">ViewBag.Error</div>
    }
    else {
        <div id="message">No photo</div>
    }
}
else {
    <table cellpadding="0" cellspacing="0" class="tbl-events">
        @for (var idx = 0; idx < Model.Count(); idx += 3) {
            <tr>
                <td>
                    @Html.Partial("_PhotoGroupThumbnail", Model.ElementAt(idx))
                </td>
                @if ((idx + 1) < Model.Count()) {
                <td>
                    @Html.Partial("_PhotoGroupThumbnail", Model.ElementAt(idx + 1))
                </td>
                }
                @if ((idx + 2) < Model.Count()) {
                <td>
                    @Html.Partial("_PhotoGroupThumbnail", Model.ElementAt(idx + 2))
                </td>
                }
            </tr>
        }
    </table>
}
</section>
