@model FotoShoutData.Models.EventTDO

<h2>Edit Event</h2>
@Html.ValidationSummary(true)
<table>
    <tr>
        <td>
            <fieldset>
                <legend>Events</legend>
                @Html.HiddenFor(model => model.EventId)
                <div>
                    <div class="item">Event Name:</div>
                    @Html.EditorFor(model => model.EventName)
                    @Html.ValidationMessageFor(model => model.EventName)
                </div>
                <div>
                    <div class="item">Event Description:</div>
                    @Html.EditorFor(model => model.EventDescription)
                    @Html.ValidationMessageFor(model => model.EventDescription)
                </div>
                <div>
                    <div class="item">Event Date:</div>
                    @Html.EditorFor(model => model.EventDate)
                    @Html.ValidationMessageFor(model => model.EventDate)
                </div>
                <div>
                    <div class="item">Event Location:</div>
                    @Html.EditorFor(model => model.EventLocation)
                    @Html.ValidationMessageFor(model => model.EventLocation)
                </div>
                <div>
                    <div class="item">Event Folder:</div>
                    @Html.EditorFor(model => model.EventFolder)
                    @Html.ValidationMessageFor(model => model.EventFolder)
                </div>
                @if (Model.AllEventOptions != null) {
                <div>
                    <div class="item">Select Event Option:</div>
                    @Html.DropDownListFor(model => model.EventOptionId, new SelectList(Model.AllEventOptions, "EventOptionId", "EventOptionName"))
                    @Html.ValidationMessageFor(model => model.EventOptionId)
                </div>
                }
                @if (Model.AllSponsors != null) {
                <div>
                    <div class="item">Select Sponsors:</div>
                    @Html.ListBoxFor(model => model.SponsorIds, new SelectList(Model.AllSponsors, "SponsorId", "SponsorName"))
                    @Html.ValidationMessageFor(model => model.SponsorIds)
                </div>
                }
            </fieldset>
        </td>
    </tr>
</table>    


